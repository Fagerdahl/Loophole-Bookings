{
  "name": "loophole-bookings",
  "version": "1.0.0",
  "description": "This repository contains my thesis project, “Loophole” which focuses on isolating, implementing and testing the core domain logic for a booking system.",
  "type": "module",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest --watch",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "demo:5.1": "node demo/createBooking.js",
    "demo:5.2": "node demo/cancelBooking.js",
    "demo:5.3": "node demo/denyUnauthorizedCancel.js",
    "demo:5.4": "node demo/noAvailableRoom.js",
    "demo": "npm run demo:5.1 && npm run demo:5.2 && npm run demo:5.3 && npm run demo:5.4",
    "demo:ui": "node demo/ui-server.js",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Fagerdahl/Loophole-Bookings.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Fagerdahl/Loophole-Bookings/issues"
  },
  "homepage": "https://github.com/Fagerdahl/Loophole-Bookings#readme",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
